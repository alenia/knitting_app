<!DOCTYPE html>
<html>
<head>
	<title><%= title %></title>
	<%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
	<%= javascript_include_tag :defaults %>
</head>
<body>
	<div class="container">
		<%= render 'layouts/header' %>
		<% if flash[:notice] || flash[:error] %>
		<div class="flash">
			<% if flash[:notice] %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
			<% elsif flash[:error] %>
			<div class="error">
				<%= flash[:error] %>
			</div>
			<% end %>
		</div>
		<% end %>
		<section class="round">
			<%= yield %>
		</section>
		<%= render 'layouts/footer' %>
	</div>
</body>
</html>